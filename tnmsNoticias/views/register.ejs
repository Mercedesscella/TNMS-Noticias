  <body class="container">
    
    <header class="df">
      <%- include('./partials/header.ejs') %>
    </header>
   
    <div class="container">

      <% if( typeof errors !='undefined'){%>
          <ul>
            <% for (let i=0; i< errors.length; i++){%>
              <li>
                <%=errors[i].msg%>
              </li>
            <%}%>
          </ul>
        <% } &>
        <form method="POST" action="/users/register" >
        
            <div>
              <label for="id">Nombre de Usuario: </label>
              <input type="text" id="id" name="name">
            </div> 
            <div>
                <label for="id">Primer Nombre: </label>
                <input type="text" id="id" name="first_name">
            </div>
            <div>
                <label for="id">Apellido: </label>
                <input type="text" id="id" name="last_name">
            </div>
            <div>
                <label for="id">Email: </label>
                <input type="email" id="id" name="email">
            </div>
            <div>
                <label for="id">Contraseña: </label>
                <input type="password" id="id" name="password">
            </div>
            <div>
              <label for="id">Tipo de usuario, 1 para usuario 2 para periodista.</label>
              <input type="password" id="id" name="type">
            </div>
            <div>
              <label for="id">ingresa tu foto: </label>
              <input type="password" id="id" name="password">
            </div>


            <div>
                <input type="submit" value="Registrarme">
                <a href="OLVIDE MI CONTRASEÑA"></a>
            </div>
        </form>
    </div>
    
    
    <footer class="df">
      <div class="footer">
        <%- include('./partials/footer.ejs') %>
      </div>
    </footer>

